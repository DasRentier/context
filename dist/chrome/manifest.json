{
  "manifest_version": 2,
  "name": "Ask Wikipedia",
  "description": "Get context on your reading. Want to know more about something? Select it and ask Wikipedia!",
  "version": "1.0",
  "homepage_url": "https://github.com/mauforonda/askwikipedia",

  "icons": {
    "48": "src/icons/wikipedia48.png",
    "96": "src/icons/wikipedia96.png"
  },

  "browser_action": {
    "default_title": "Ask Wikipedia",
    "default_popup": "src/panel/panel.html",
    "default_icon": "src/icons/wikipedia96.png"
  },
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {"default": "Alt+Z"},
      "description": "Ask Wikipedia"
    }
  },

  "options_ui": {
    "page": "src/options/options.html"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage"
  ]

}
